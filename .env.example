# Arcadia Platform Environment Configuration
# Copy this file to .env and update the values as needed

# Database Configuration
DATABASE_URL=postgresql://arcadia_user:arcadia_pass@localhost:5432/arcadia

# JWT Configuration
JWT_SECRET_KEY=change-me-in-production-use-strong-secret
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Redis Configuration (for future caching/sessions)
REDIS_URL=redis://localhost:6379/0

# Application Configuration
DEFAULT_TOKENS=100
DEBUG=True
LOG_LEVEL=INFO

# Security Configuration
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=5

# Platform Configuration
PLATFORM_NAME=Arcadia Online Arcade
PLATFORM_VERSION=1.0.0
